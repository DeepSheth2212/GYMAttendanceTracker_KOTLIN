<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GYMAttendanceTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Main_bg">
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="Edit_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edittext_background_light</item>
        <item name="android:textColorHint">@color/grey_3</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Textview">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="home_fragment">
        <item name="android:background">@color/white</item>
    </style>

    <style name="card_view">
        <item name="android:backgroundTint">@color/grey_cardview</item>
    </style>

    <style name="Theme.GYMAttendanceTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GYMAttendanceTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GYMAttendanceTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>