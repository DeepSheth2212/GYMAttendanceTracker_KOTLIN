<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GYMAttendanceTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Main_bg">
        <item name="android:background">@color/grey_2</item>
    </style>

    <style name="Edit_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_3</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/purple_200</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="home_fragment">
        <item name="android:background">@color/grey_2</item>
    </style>

    <style name="card_view">
        <item name="android:background">@color/grey_3</item>
    </style>
</resources>